<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context=".FormActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/titleTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/app_name"
        android:layout_marginTop="16dp"
        android:textAlignment="center"
        android:textSize="50sp"
        android:textColor="@color/birkbeck"
        android:textStyle="bold"
        android:layout_centerHorizontal="true" />

    <!-- Form Layout -->
    <LinearLayout
        android:id="@+id/formLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/titleTxt"
        android:layout_marginTop="16dp">

        <!-- Title Label -->
        <TextView
            android:id="@+id/titleLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Title"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />

        <!-- Title Input -->
        <EditText
            android:id="@+id/titleInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter title"
            android:layout_marginTop="8dp" />

        <!-- Duration Label -->
        <TextView
            android:id="@+id/durationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Duration"
            android:layout_marginTop="16dp" />

        <!-- Duration Input -->
        <EditText
            android:id="@+id/durationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter duration"
            android:layout_marginTop="8dp" />

        <!-- Date Label -->
        <TextView
            android:id="@+id/dateLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Date"
            android:layout_marginTop="16dp" />

        <!-- Date Input -->
        <EditText
            android:id="@+id/dateInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter date"
            android:inputType="date"
            android:layout_marginTop="8dp" />

        <!-- Evaluation Label -->
        <TextView
            android:id="@+id/evaluationLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Evaluation"
            android:layout_marginTop="16dp" />

        <!-- Evaluation Input -->
        <EditText
            android:id="@+id/evaluationInput"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter evaluation"
            android:layout_marginTop="8dp" />

        <!-- Save Button -->
        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Save"
            android:background="@color/birkbeck"
            android:textColor="@android:color/white"
            android:layout_marginTop="16dp"
            android:layout_centerHorizontal="true" />
    </LinearLayout>

</RelativeLayout>